{
    "name": "allegro",
    "description": "D binding to the Allegro5 game development library",
    "authors": ["SiegeLord"],
    "homepage": "https://github.com/SiegeLord/DAllegro5",
    "license": "Zlib",
    "targetType": "library",
    "sourcePaths": ["allegro5"],
    "importPaths": ["."],
    "targetName": "dallegro5",
    "configurations": [
        {
            "name": "no-libs"
        },
        {
            "name": "allegro-only",
            "libs": ["allegro"]
        },
        {
            "name": "all-addons",
            "libs": [
                "allegro",
                "allegro_acodec",
                "allegro_audio",
                "allegro_font",
                "allegro_ttf",
                "allegro_image",
                "allegro_color",
                "allegro_primitives"
            ]
        }
    ]
}
